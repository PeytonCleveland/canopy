{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Canopy",
	"version": "0.1.0",
	"identifier": "com.canopy.app",
	"build": {
		"frontendDist": "../../dashboard/.next",
		"devUrl": "http://localhost:3001",
		"beforeDevCommand": "",
		"beforeBuildCommand": ""
	},
	"app": {
		"windows": [
			{
				"title": "Canopy",
				"width": 1600,
				"height": 1000,
				"minWidth": 1280,
				"minHeight": 720,
				"resizable": true,
				"fullscreen": false,
				"maximized": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
