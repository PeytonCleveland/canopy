{
	"extends": "@canopy/config/tsconfig.react.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/app/*": ["./app/*"],
			"@/components/*": ["./components/*"],
			"@/lib/*": ["./lib/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
